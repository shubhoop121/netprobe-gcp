{
  "name": "NetProbe GCP Dev Environment",
  
  "dockerComposeFile": "docker-compose.yml",
  
  "service": "app",
  "workspaceFolder": "/workspaces/netprobe-gcp",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "installYarn": true
    }
  },

  "postCreateCommand": "pip install --no-cache-dir -r ./apps/api/requirements.txt && cd apps/dashboard && yarn install",


  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "esbenp.prettier-vscode",
        "cweijan.vscode-postgresql-client"
      ]
    }
  }
}