{
  "name": "NetProbe GCP Dev Environment",
  // Use the Dockerfile to build the image
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Commands that run after the container is created
  "postCreateCommand": "pip install --no-cache-dir -r./apps/api/requirements.txt",

  // VS Code specific customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "esbenp.prettier-vscode"
      ]
    }
  }
}